<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_time">

    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:text="PASSER"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_bg_gradient"
        android:layout_gravity="end"
        tools:ignore="SmallSp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_layout_onboarding"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout_onboarding"
        app:layout_constraintTop_toBottomOf="@id/skip_button">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <com.arindicatorview.ARIndicatorView
            android:id="@+id/indicator_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_onboarding"
            app:indicator_size="20"
            app:animate_indicator_scrubbing="true"
            app:indicator_scrubbing="true"
            app:selected_color="@color/darkGreen"
            app:indicator_shape="@drawable/rounded_rect"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/vector_deco"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/btn_bg_gradient"
            android:padding="12dp"
            android:text="S'INSCRIRE"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>