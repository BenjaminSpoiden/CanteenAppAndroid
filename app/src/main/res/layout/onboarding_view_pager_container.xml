<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/onBoarding_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_time"/>

    <ImageView
        android:id="@+id/vector_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_deco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent" />

    <ImageView
        android:id="@+id/rect_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/main_rect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/time_logo"
        app:layout_constraintEnd_toEndOf="@+id/rect_background"
        app:layout_constraintStart_toStartOf="@id/rect_background"
        app:layout_constraintTop_toTopOf="@id/rect_background" />

    <TextView
        android:id="@+id/header_onb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="LOREM IPSUM"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#148C00"
        app:layout_constraintEnd_toEndOf="@+id/rect_background"
        app:layout_constraintStart_toStartOf="@id/rect_background"
        app:layout_constraintTop_toTopOf="@id/rect_background" />

    <TextView
        android:id="@+id/description_onb"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:textSize="14sp"
        android:text="loremipsumlenrjenjjejejnfjnfjofneizonfezfnezebdfebdeuirbebzeiebizuerieuziuerbuzeiziuehr"
        app:layout_constraintEnd_toEndOf="@id/rect_background"
        app:layout_constraintStart_toStartOf="@id/rect_background"
        app:layout_constraintTop_toTopOf="@id/rect_background"
        android:layout_marginTop="200dp" />


    <LinearLayout
        android:id="@+id/indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rect_background"
        app:layout_constraintLeft_toLeftOf="@id/rect_background"
        android:layout_marginStart="121dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal" />


    <ImageView
        android:id="@+id/skip_btn_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/skip_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/skip_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/skip_btn_imageview"
        app:layout_constraintEnd_toEndOf="@id/skip_btn_imageview"
        app:layout_constraintStart_toStartOf="@id/skip_btn_imageview"
        app:layout_constraintTop_toTopOf="@id/skip_btn_imageview" />

</androidx.constraintlayout.widget.ConstraintLayout>