<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test"
        android:text="TEST"
        android:textColor="@color/grey"
        android:background="@android:color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:active_item_color="@color/darkBlue"
        app:centre_button_color="@android:color/black"
        app:inactive_item_color="@color/defaultIcon"
        app:space_background_color="@android:color/white"
        app:centre_button_icon="@drawable/ic_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>