<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="horizontal"
    android:id="@+id/recycler_view_croissant_item_id">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/others_menu_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_price_croissant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/slightlyTurquoise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/others_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,99 â‚¬"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"/>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/others_illustration"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:src="@drawable/croissant_illustration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/others_detail_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/info_btn"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/type_others"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/others_illustration" />

            <TextView
                android:id="@+id/type_others"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="entree"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center|start"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/others_detail_btn"
                app:layout_constraintStart_toStartOf="@id/others_illustration"
                app:layout_constraintTop_toBottomOf="@id/others_illustration"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/others_description"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:text="Soupe de Cyprine sur son nid de giclette"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/darkTurquoise"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/others_illustration"
                app:layout_constraintStart_toStartOf="@id/others_illustration"
                app:layout_constraintTop_toBottomOf="@id/type_others" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
