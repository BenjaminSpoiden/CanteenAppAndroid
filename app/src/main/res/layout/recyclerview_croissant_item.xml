<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_gravity="center|top"
    android:id="@+id/recycler_view_croissant_item_id">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/croissant_menu_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_price_croissant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/slightlyTurquoise"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,99 â‚¬"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"/>

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/croissant_illustration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/croissant_illustration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/croissant_detail_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/info_btn"
                app:layout_constraintBottom_toBottomOf="@+id/type_croissant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/type_croissant"
                app:layout_constraintTop_toBottomOf="@+id/croissant_illustration" />

            <TextView
                android:id="@+id/type_croissant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entree"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/croissant_illustration"
                app:layout_constraintTop_toBottomOf="@id/croissant_illustration"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/croissant_description"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:text="Soupe de Cyprine sur son nid de giclette"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/darkTurquoise"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/croissant_illustration"
                app:layout_constraintStart_toStartOf="@id/croissant_illustration"
                app:layout_constraintTop_toBottomOf="@id/type_croissant" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/selected_croissant_item"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="150dp"
        android:elevation="10dp"
        android:src="@drawable/check"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/croissant_menu_bg"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


