            <RelativeLayout
                android:id="@+id/my_payment_row"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_payment"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/icon_payment"
                    android:gravity="center"
                    android:text="Mes Paiements"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    tools:ignore="PrivateResource" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_allergies_row"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_allergies"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gluten_free"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Mes Allergies"
                    android:layout_toEndOf="@+id/icon_allergies"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    tools:ignore="PrivateResource" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parameters_row"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="Paramètres"
                    android:layout_toEndOf="@+id/icon_settings"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    tools:ignore="PrivateResource" />
            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_out_profile_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="180dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Se déconnecter"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_clear_white_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>