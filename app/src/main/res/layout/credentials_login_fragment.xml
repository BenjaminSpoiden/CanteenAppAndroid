<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/sign_in_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/credentials_bg_img">

    <ImageView
        android:id="@+id/ui_rect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_transition"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_round_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/ui_rect"
        app:layout_constraintEnd_toEndOf="@id/ui_rect"
        app:layout_constraintStart_toStartOf="@id/ui_rect"
        app:layout_constraintTop_toTopOf="@id/ui_rect"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/logo_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/logo_placeholder"
        app:layout_constraintEnd_toEndOf="@id/logo_placeholder"
        app:layout_constraintStart_toStartOf="@id/logo_placeholder"
        app:layout_constraintTop_toTopOf="@id/logo_placeholder" />

    <Space
        android:id="@+id/space_logo_login"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintTop_toBottomOf="@id/logo_placeholder"/>


    <ImageView
        android:id="@+id/credentials_holder"
        android:layout_width="355dp"
        android:layout_height="320dp"
        android:src="@drawable/credentials_holder"
        app:layout_constraintTop_toBottomOf="@id/space_logo_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/credentials_holder_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/darkBlue"
        app:layout_constraintTop_toTopOf="@id/credentials_holder"
        app:layout_constraintBottom_toBottomOf="@id/ui_rect"
        app:layout_constraintEnd_toEndOf="@id/credentials_holder"
        app:layout_constraintStart_toStartOf="@id/credentials_holder"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:fontFamily="@font/righteous"
        android:textColor="@color/endGradient"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/credentials_holder"
        app:layout_constraintTop_toTopOf="@id/credentials_holder"
        app:layout_constraintEnd_toEndOf="@id/credentials_holder"
        app:layout_constraintBottom_toBottomOf="@id/ui_rect"/>

    <Space
        android:id="@+id/anchor_login"
        android:layout_width="355dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@id/credentials_holder"
        app:layout_constraintTop_toTopOf="@id/credentials_holder"
        app:layout_constraintEnd_toEndOf="@id/credentials_holder"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_bundle"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="@+id/credentials_holder"
        app:layout_constraintStart_toStartOf="@+id/anchor_login"
        app:layout_constraintTop_toBottomOf="@+id/anchor_login">

        <EditText
            android:id="@+id/credentials_login"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/credentials_text_rect"
            android:fontFamily="@font/roboto_thin_2"
            android:hint="Nom d'utilisateur"
            android:paddingStart="5dp"
            android:textColorHint="@color/darkBlue"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/login_bundle"
            app:layout_constraintEnd_toEndOf="@id/login_bundle"
            app:layout_constraintStart_toStartOf="@id/login_bundle"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/little_rect_credentials_login"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/credentials_little_rect"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/credentials_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/credentials_login" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/credentials_username"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/little_rect_credentials_login"
            app:layout_constraintStart_toStartOf="@+id/little_rect_credentials_login"
            app:layout_constraintTop_toTopOf="@+id/little_rect_credentials_login" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/password_bundle"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/anchor_login"
        app:layout_constraintTop_toBottomOf="@+id/anchor_login"
        app:layout_constraintEnd_toEndOf="@+id/anchor_login"
        android:layout_marginTop="48dp">

        <EditText
            android:id="@+id/credentials_password"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:background="@drawable/credentials_text_rect"
            android:fontFamily="@font/roboto_thin_2"
            android:textSize="14sp"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:paddingStart="5dp"
            android:textColorHint="@color/darkBlue"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@id/password_bundle"
            app:layout_constraintEnd_toEndOf="@id/password_bundle"
            app:layout_constraintStart_toStartOf="@id/password_bundle"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/little_rect_credentials_password"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/credentials_little_rect"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/credentials_password"
            app:layout_constraintEnd_toEndOf="@+id/credentials_password"
            app:layout_constraintTop_toTopOf="@id/credentials_password" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/credentials_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/little_rect_credentials_password"
            app:layout_constraintStart_toStartOf="@+id/little_rect_credentials_password"
            app:layout_constraintTop_toTopOf="@+id/little_rect_credentials_password" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        android:layout_height="36dp"
        android:background="@drawable/btn_bg_gradient"
        android:text="Se Connecter"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="112dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/anchor_login"
        app:layout_constraintEnd_toEndOf="@id/anchor_login"
        app:layout_constraintStart_toStartOf="@id/anchor_login"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:fontFamily="@font/roboto_italic"
        android:text="Pas de compte ? Engristrez-vous"
        android:textColor="@color/darkGreen"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>