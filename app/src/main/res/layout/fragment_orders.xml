<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/spacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="20dp"
        android:background="@color/spacerColor"
        app:layout_constraintBottom_toTopOf="@+id/proceedToCheckout_bg" />

    <ImageView
        android:id="@+id/proceedToCheckout_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:src="@drawable/proceed_to_checkout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sub_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toTopOf="@+id/proceedToCheckout_bg"
        android:text="Sous-total" />

    <TextView
        android:id="@+id/sub_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toTopOf="@+id/proceedToCheckout_bg"
        android:text="4,00 €" />

    <TextView
        android:id="@+id/tva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toBottomOf="@+id/sub_total"
        android:text="Taux TVA" />

    <TextView
        android:id="@+id/tva_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toBottomOf="@+id/sub_total_price"
        android:text="0,84 €" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGreen"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toBottomOf="@+id/tva"
        android:text="Total" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGreen"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/proceedToCheckout_bg"
        app:layout_constraintTop_toBottomOf="@+id/tva_price"
        android:text="4,84 €" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/payment_checkout_btn"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:background="@drawable/indicator_selected"
        android:text="Procéder au payment"
        android:textSize="12sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/proceedToCheckout_bg"
        app:layout_constraintEnd_toEndOf="@+id/proceedToCheckout_bg"
        app:layout_constraintStart_toStartOf="@id/proceedToCheckout_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>