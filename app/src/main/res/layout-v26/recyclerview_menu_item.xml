<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:paddingBottom="10dp"
    android:id="@+id/recycler_view_item_id">

    <ImageView
        android:id="@+id/menu_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/menu_illustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_illustration"
        app:layout_constraintTop_toTopOf="@id/menu_bg"
        app:layout_constraintStart_toStartOf="@id/menu_bg"
        app:layout_constraintEnd_toEndOf="@id/menu_bg"/>

    <ImageView
        android:id="@+id/menu_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_detail_button"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="@id/menu_illustration"
        app:layout_constraintEnd_toEndOf="@id/menu_illustration"/>

    <TextView
        android:id="@+id/type_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTREE"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/menu_illustration"
        app:layout_constraintStart_toStartOf="@id/menu_illustration"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/menu_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/darkerGrey"
        android:text="@string/mock_desc"
        android:justificationMode="inter_word"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/type_menu"
        app:layout_constraintEnd_toEndOf="@id/menu_illustration"
        app:layout_constraintStart_toStartOf="@id/menu_illustration"
        app:layout_constraintBottom_toBottomOf="@id/menu_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>