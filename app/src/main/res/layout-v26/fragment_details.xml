<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="detailViewModel"
            type="be.technifutur.devmob9.projet_cantinapp_android.viewmodel.DetailViewModel" />
    </data>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:id="@+id/fragment_detail_id">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/allergies_layout"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@{detailViewModel.detailTitle}"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_detail_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:src="@drawable/detail_bg"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container"
                    android:animateLayoutChanges="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/allergies_recyclerview"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toTopOf="@+id/allergy_infobox_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_description" />

                    <ImageView
                        android:id="@+id/detail_illustration"
                        android:layout_width="370dp"
                        android:layout_height="120dp"
                        android:src="@drawable/detail_illustration"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@id/container"
                        app:layout_constraintTop_toTopOf="@+id/container" />

                    <TextView
                        android:id="@+id/detail_description"
                        android:scrollbars="vertical"
                        android:layout_width="346dp"
                        android:layout_height="135dp"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkTurquoise"
                        android:justificationMode="inter_word"
                        android:text="@{detailViewModel.detailDescription}"
                        app:layout_constraintEnd_toEndOf="@+id/container"
                        app:layout_constraintStart_toStartOf="@+id/container"
                        app:layout_constraintTop_toBottomOf="@+id/detail_illustration" />

                    <LinearLayout
                        android:id="@+id/allergy_infobox_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:animateLayoutChanges="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/allergies_recyclerview">

                        <LinearLayout
                            android:layout_width="370dp"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/lightGreen"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="4dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <ImageView
                                        android:id="@+id/allergies_image"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_gluten" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            style="@style/TextAppearance.AppCompat.Title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Allergies"
                                            android:textColor="@android:color/white" />

                                        <TextView
                                            android:id="@+id/allergies_desc"
                                            style="@style/TextAppearance.AppCompat.Subhead"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:justificationMode="inter_word"
                                            android:text="Contient cet allergÃ¨ne"
                                            android:textColor="@android:color/white"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="16dp"
                                        android:layout_marginRight="16dp"
                                        android:background="@color/green" />

                                    <TextView
                                        android:id="@+id/allergies_detail"
                                        style="@style/TextAppearance.AppCompat.Body2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:text="DETAIL"
                                        android:textColor="@android:color/white" />
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:id="@+id/detail_nutriment_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/detail_nutriment_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_detail_holder" />

            <ImageView
                android:id="@+id/sugar_amount_vw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_amount"
                app:layout_constraintBottom_toBottomOf="@+id/detail_nutriment_bg"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg"
                app:layout_constraintTop_toTopOf="@+id/detail_nutriment_bg" />

            <ImageView
                android:id="@+id/sugar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/sugar"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg"
                app:layout_constraintStart_toStartOf="@id/detail_nutriment_bg"
                app:layout_constraintTop_toTopOf="@id/detail_nutriment_bg"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/detail_nutriment_bg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/detail_nutriment_bg"
                app:layout_constraintStart_toEndOf="@+id/detail_nutriment_bg"
                app:layout_constraintTop_toBottomOf="@+id/cardview_detail_holder" />

            <ImageView
                android:id="@+id/orange_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange_amount"
                app:layout_constraintBottom_toBottomOf="@+id/detail_nutriment_bg2"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg2"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg2"
                app:layout_constraintTop_toTopOf="@+id/detail_nutriment_bg2" />

            <ImageView
                android:id="@+id/fat"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/fat"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg2"
                app:layout_constraintStart_toStartOf="@id/detail_nutriment_bg2"
                app:layout_constraintTop_toTopOf="@id/detail_nutriment_bg2"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/detail_nutriment_bg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/detail_nutriment_bg"
                app:layout_constraintEnd_toStartOf="@+id/detail_nutriment_bg4"
                app:layout_constraintStart_toEndOf="@+id/detail_nutriment_bg2"
                app:layout_constraintTop_toBottomOf="@+id/cardview_detail_holder" />

            <ImageView
                android:id="@+id/green_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_amount"
                app:layout_constraintBottom_toBottomOf="@+id/detail_nutriment_bg3"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg3"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg3"
                app:layout_constraintTop_toTopOf="@+id/detail_nutriment_bg3" />

            <ImageView
                android:id="@+id/protein"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/protein"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg3"
                app:layout_constraintStart_toStartOf="@id/detail_nutriment_bg3"
                app:layout_constraintTop_toTopOf="@id/detail_nutriment_bg3"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/detail_nutriment_bg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/detail_nutriment_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardview_detail_holder" />

            <ImageView
                android:id="@+id/orange_amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange_amount2"
                app:layout_constraintBottom_toBottomOf="@+id/detail_nutriment_bg4"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg4"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg4"
                app:layout_constraintTop_toTopOf="@+id/detail_nutriment_bg4" />

            <ImageView
                android:id="@+id/cal"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/calories"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg4"
                app:layout_constraintStart_toStartOf="@id/detail_nutriment_bg4"
                app:layout_constraintTop_toTopOf="@id/detail_nutriment_bg4"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/sugar_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg"
                app:layout_constraintTop_toBottomOf="@+id/sugar"
                android:text="@{detailViewModel.sugarAmount}" />

            <TextView
                android:id="@+id/fat_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg2"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg2"
                app:layout_constraintTop_toBottomOf="@+id/fat"
                android:text="@{detailViewModel.fatAmount}" />

            <TextView
                android:id="@+id/protein_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg3"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg3"
                app:layout_constraintTop_toBottomOf="@+id/protein"
                android:text="@{detailViewModel.proteinsAmount}" />

            <TextView
                android:id="@+id/cal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/detail_nutriment_bg4"
                app:layout_constraintStart_toStartOf="@+id/detail_nutriment_bg4"
                app:layout_constraintTop_toBottomOf="@+id/cal"
                android:text="@{detailViewModel.kCalAmount}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>


